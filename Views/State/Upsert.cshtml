@model StateVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary m-lg-0 py-0">
        <div class="row">
            <div class="col-12 text-center">

                @if (Model.State.Id != 0)
                {
                    <h2 class="text-white py-2">Update State</h2>
                }
                else
                {
                    <h2 class="text-white py-2">Create State</h2>
                }
            </div>
        </div>
    </div>
    <div class="card-body">

        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="State.Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="State.Name" class="form-control border-0 shadow" />
                            <label asp-for="State.Name" class="ms-2"></label>
                            <span asp-validation-for="State.Name" class="text-danger"></span>
                        </div>
                       
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.State.CountryID" asp-items="@Model.CountryList" class="form-select border-0 shadow">
                                <option></option>
                            </select>
                            <label asp-for="State.CountryID" class="ms-2"></label>
                            <span asp-validation-for="State.CountryID" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-6">
                            @if (Model.State.Id != 0)
                            {

                                <button type="submit" class="btn btn-primary form-control"> Update</button>
                            }
                            else
                            {

                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>

                        <div class="col-6  col-md-6">

                            <a asp-controller="State" asp-action="Index" class="btn btn-primary  form-control">
                                Back To List
                            </a>
                        </div>
                    </div>
                </div>

            </div>



        </form>
    </div>
</div>
