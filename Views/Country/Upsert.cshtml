@model Country

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary m-lg-0 py-0">
        <div class="row">
            <div class="col-12 text-center">

                @if (Model.Id != 0)
                {
                    <h2 class="text-white py-2">Update Country</h2>
                }
                else
                {
                    <h2 class="text-white py-2">Create Country</h2>
                }
            </div>
        </div>
    </div>
    <div class="card-body">

        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Code" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Code" class="ms-2"></label>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" multiple />
                            <label asp-for="flag" class="ms-2"></label>
                        </div>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-6">
                            @if (Model.Id != 0)
                            {

                                <button type="submit" class="btn btn-primary form-control"> Update</button>
                            }
                            else
                            {

                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>

                        <div class="col-6  col-md-6">

                            <a asp-controller="Country" asp-action="Index" class="btn btn-primary  form-control">
                                Back To List
                            </a>
                        </div>
                    </div>
                </div>


                <div class="col-2">

                    <div class="border p-1 m-2 text-center">
                        @if (Model.Id != 0)
                        {
                            <img src="@Model.flag" width="100%"
                                 style="border-radius:5px; border:1px solid #bbb9b9" />
                        }
                    </div>



                </div>
            </div>

        </form>
    </div>
</div>


